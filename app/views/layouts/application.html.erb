<!DOCTYPE html>
<html>
<head>
  <title>RailsTodo</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="container">
	<% flash.each do |key, value| %>
  	<div role="alert" class="alert alert-<%= key %>"><%= value %></div>
	<% end %>

	<%= yield %>
</div>

</body>
</html>
