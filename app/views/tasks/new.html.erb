<%= form_for @task do |t| %>
  <%= t.label :name %>
  <%= t.text_field :name %>
  <br>
  <%= t.label :description %>
  <%= t.text_field :description %>
  <br>
  <%= t.label :due_date %>
  <%= t.date_select :due_date %>
  <br>
  <%= select_tag "task[listid]", options_from_collection_for_select(List.all, :id, :name) %>
  <br>
  <%= t.submit "Create new task" %>
<% end %>
